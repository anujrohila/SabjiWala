@model OrderWala.Domain.tblLoginDTO

@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


 


<div id="page-content">

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">User</h3>
    </div>
   
    
    <!--Input Size-->
    <!--===================================================-->
  @using(Html.BeginForm("Save","Login",FormMethod.Post, new { @class="form-horizontal" }))
    {
      
      @Html.HiddenFor(Model => Model.UserId)
      
        <div class="panel-body">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="text-danger">
                    @Html.ValidationSummary()
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Mobile Number</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.MobileNo, new { @class ="form-control input-sm", placeholder ="Enter The 10 digit Mobile number" })
                    @*<input type="text" placeholder=".input-sm" class="form-control input-sm" id="demo-is-inputsmall">*@
                </div>
            </div>
             <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Password</label>
                <div class="col-sm-5">
                    @Html.PasswordFor(model => model.Password, new { @class ="form-control input-sm", placeholder ="Enter Password For Login" })
                    @*<input type="text" placeholder=".input-sm" class="form-control input-sm" id="demo-is-inputsmall">*@
                </div>
            </div>
             <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Select User Type</label>
                <div class="col-sm-5">
                   @Html.DropDownListFor(Model => Model.UserTypeId, new SelectList(ViewBag.user, "UserTypeId", "TypeName"), "--select User Type--", new { @class="btn dropdown-toggle btn-default btn-md form-control"})
                </div>
            </div>
            
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-9 col-sm-offset-3">
                    <button class="btn btn-success btn-labeled fa fa-save fa-lg" type="submit">Save</button>                 
                
                    
                    
                </div>
            </div>
        </div>
    }
    <!--===================================================-->
    <!--End Input Size-->

    </div>
</div>
