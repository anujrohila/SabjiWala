@model OrderWala.Domain.tblSubCategoryDTO
@{
    ViewBag.Title = "SubCategorySave";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div id="page-content">

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">SubCategory Master</h3>
    </div>
   
    
    <!--Input Size-->
    <!--===================================================-->
  @using (Html.BeginForm("SubCategorySave", "SubCategory", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
         
      
       <div class="panel-body">
            @Html.ValidationSummary(true)
            
            
           @Html.HiddenFor(model => model.SubCategoryId)
           @Html.HiddenFor(model => model.RowId)
          

            <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Category Name</label>
                <div class="col-sm-5">                
                    @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.categorylist, "CategoryId", "CategoryName"), "---Select Category---", new {  @class="form-control"})                 
                </div>
            </div>
                   
            <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Sub CategoryName</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.SubCategoryName, new { @class ="form-control input-sm", placeholder ="" })                  
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Description</label>
                <div class="col-sm-5">
                     @Html.TextBoxFor(model => model.Description, new { @class ="form-control input-sm", placeholder ="" })
                </div>
            </div>

            <div class="form-group">
                    <label class="col-sm-3 control-label" for="demo-is-inputsmall">Language</label>
                    <div class="col-sm-5">
                        @Html.DropDownListFor(model => model.LanguageId, new SelectList(Model.LanguageList, "LanguageId", "LanguageName"), "--select Language--", new { @class = "btn dropdown-toggle btn-default btn-md form-control" })

                    </div>
                </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Logo</label>
                <div class="col-sm-5">
                   <input type="file" name="file" id="file" />
                   @{
                        if (TempData["msg"] != null)
                        { 
                            <text>@TempData["msg"].ToString()</text>
                        }
                    }
                </div>
            </div>
        

        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-9 col-sm-offset-3">
                    <button class="btn btn-success btn-labeled fa fa-save fa-lg" type="submit">Save</button>
                    <a href="@Url.Action("ListAllSubCategory","SubCategory")"><button class="btn btn-danger btn-labeled fa fa-repeat fa-lg" type="button">Back To List</button></a>
                </div>
            </div>
        </div>
    }
    <!--===================================================-->
    <!--End Input Size-->

    </div>
</div>
