@model OrderWala.Domain.tblSubCategoryDTO
@{
    ViewBag.Title = "SubCategorySave";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>SubCategorySave</h2>

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">SubCategory Master</h3>
    </div>
   
    
    <!--Input Size-->
    <!--===================================================-->
  @using (Html.BeginForm("SubCategorySave", "SubCategory", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
      
      @Html.HiddenFor(Model => Model.SubCategoryId)
      
       <div class="panel-body">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="text-danger">
                    @Html.ValidationSummary()
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Category Name</label>
                <div class="col-sm-5">
                     
                     @Html.HiddenFor(Model => Model.IsActive)
                     @Html.HiddenFor(Model => Model.IsDeleted)
                    
                   
                    @Html.DropDownListFor(Model => Model.CategoryId, new SelectList(ViewBag.categorydata, "CategoryId", "CategoryName"), "---Select Category---", new {  @class="form-control"})
                    @*<input type="text" placeholder=".input-sm" class="form-control input-sm" id="demo-is-inputsmall">*@
                </div>
            </div>

        
            <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Sub CategoryName</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.SubCategoryName, new { @class ="form-control input-sm", placeholder ="" })
                    @*<input type="text" placeholder=".input-sm" class="form-control input-sm" id="demo-is-inputsmall">*@
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Description</label>
                <div class="col-sm-5">
                     @Html.TextBoxFor(model => model.Description, new { @class ="form-control input-sm", placeholder ="" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Logo</label>
                <div class="col-sm-5">
                   <input type="file" name="file" id="file" />
                   @{
                        if (TempData["msg"] != null)
                        { 
                            <text>@TempData["msg"].ToString()</text>
                        }
                    }
                </div>
            </div>
        

        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-9 col-sm-offset-3">
                    <button class="btn btn-success btn-labeled fa fa-save fa-lg" type="submit">Save</button>
                    <button class="btn btn-danger btn-labeled fa fa-repeat fa-lg" type="reset">Cancel</button>
                </div>
            </div>
        </div>
    }
    <!--===================================================-->
    <!--End Input Size-->


</div>
