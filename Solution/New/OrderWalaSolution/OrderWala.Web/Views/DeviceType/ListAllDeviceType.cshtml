@model List<OrderWala.Domain.tblDeviceTypeDTO>
@{
    ViewBag.Title = "ListAllDeviceType";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<link href="~/Content/plugins/datatables/media/css/dataTables.bootstrap.css" rel="stylesheet">
<link href="~/Content/plugins/datatables/extensions/Responsive/css/dataTables.responsive.css" rel="stylesheet">

<div id="page-content">
<div class="panel">
    <div class="panel-heading">
     <h3 class="panel-title">Device Master</h3>
    </div>

    <!-- Foo Table - Add & Remove Rows -->
    <!--===================================================-->
    <div class="panel-body">
        <div class="pad-btm form-inline">
            <div class="row">
                <div class="col-sm-6 text-xs-center">
                    <div class="form-group">
                        <a id="demo-btn-addrow" class="btn btn-purple btn-labeled fa fa-plus" href="@Url.Action("DeviceSave", "DeviceType")">Add New DeviceType</a>
                    </div>
                </div>
               
            </div>
        </div>
       <table id="demo-dt-basic" class="table table-striped table-bordered" cellspacing="0" width="100%">

            <thead>
                <tr>
                    <th >Name Of The Device Type</th>
                    <th align="center">Action</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                                          
                    <tr >
                        <td> @item.DeviceType</td>
                        <td >
                            <a href="@Url.Action("DeviceSave", "DeviceType", new { id = item.DeviceId })" style="color:white"><i class="fa fa-lg fa-pencil-square-o" style="background-color: green; padding: 5px;"></i></a>
                            <a class="demo-delete-row btn btn-danger btn-xs btn-icon fa fa-times" style="margin-left:10px;" onclick="DeleteState(@item.DeviceId,this)"></a>
                          
                        </td>
                    
                     </tr>
                     
                }
            </tbody>
           
        </table>
    </div>
    <!--===================================================-->
    <!-- End Foo Table - Add & Remove Rows -->
    </div>
</div>

	 <script src="~/Content/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/plugins/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/Content/plugins/datatables/media/js/dataTables.bootstrap.js"></script>
    <script src="~/Content/js/demo/tables-datatables.js"></script>

<script type="text/javascript">


    function DeleteState(id, thd) {
        var confirmResult = confirm("Are you Sure Delete Record ?");
        var callUrl = $("#webUrl").val() + "DeviceType/DeviceDelete";
        var dataToSend = { ID: id };
        if (confirmResult) {
            $.ajax({
                url: callUrl,
                type: "POST",
                data: dataToSend,
                cache: false,
                success: function (result) {
                    if (result.Success == true) {
                        if (typeof (thd) == "object") {
                            $(thd).closest("tr").remove();
                        } else {
                            return false;
                        }
                    }
                    else {
                        alert(result.Message);
                    }
                }
            });
        }
    }
</script>
