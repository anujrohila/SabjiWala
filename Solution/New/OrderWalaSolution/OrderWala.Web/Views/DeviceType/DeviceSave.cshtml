@model OrderWala.Domain.tblDeviceTypeDTO
@{
    ViewBag.Title = "DeviceSave";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div id="page-content">

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Device</h3>
    </div>
   
    
    <!--Input Size-->
    <!--===================================================-->
  @using(Html.BeginForm("DeviceSave","DeviceType",FormMethod.Post, new { @class="form-horizontal" }))
    {
      
      @Html.HiddenFor(Model => Model.DeviceId)
      
        <div class="panel-body">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="text-danger">
                    @Html.ValidationSummary()
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-sm-3 control-label" for="demo-is-inputsmall">Device Type Name</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.DeviceType, new { @class ="form-control input-sm", placeholder ="" })
                    @*<input type="text" placeholder=".input-sm" class="form-control input-sm" id="demo-is-inputsmall">*@
                </div>
            </div>
            
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-9 col-sm-offset-3">
                    <button class="btn btn-success btn-labeled fa fa-save fa-lg" type="submit">Save</button>
                    
                      <a href="@Url.Action("ListAllDeviceType","DeviceType")"><button class="btn btn-danger  btn-labeled fa fa-repeat fa-lg" type="button">Back To List</button></a>
                </div>
            </div>
        </div>
    }
    <!--===================================================-->
    <!--End Input Size-->


</div>
    </div>
