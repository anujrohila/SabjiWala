@model OrderWala.Domain.tblCityDTO

@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div id="page-content">

    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">City</h3>
        </div>


        <!--Input Size-->
        <!--===================================================-->
        @using (Html.BeginForm("Save", "City", FormMethod.Post, new { @class = "form-horizontal" }))
        {
      
            @Html.HiddenFor(Model => Model.CityId)
      
            <div class="panel-body">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <div class="text-danger">
                        @Html.ValidationSummary()
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="demo-is-inputsmall">State Name</label>
                    <div class="col-sm-5">
                        @Html.DropDownListFor(Model => Model.StateId, new SelectList(ViewBag.state, "StateId", "StateName"), "--------select State---------", new { @class = "btn dropdown-toggle btn-default btn-md form-control" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="demo-is-inputsmall">State Name</label>
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.CityName, new { @class = "form-control input-sm", placeholder = "" })

                    </div>
                </div>

            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">

                        <button class="btn btn-success btn-labeled fa fa-save fa-lg" type="submit">Save</button>


                        <a href="@Url.Action("ListAllCity", "City")">
                            <button class="btn btn-danger  btn-labeled fa fa-repeat fa-lg" type="button">Back To List</button></a>




                    </div>
                </div>
            </div>
        }
        <!--===================================================-->
        <!--End Input Size-->

    </div>
</div>

