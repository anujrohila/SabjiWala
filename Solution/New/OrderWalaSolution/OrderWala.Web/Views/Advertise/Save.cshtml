@model OrderWala.Domain.tblAdvertisementDTO

@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Advertise</h3>
        </div>


        <!--Input Size-->
        <!--===================================================-->
        @using (Html.BeginForm("Save", "Advertise", FormMethod.Post, new { @class = "form-horizontal" }))
        {
      
            @Html.HiddenFor(Model => Model.AdvertisementId)
      
            <div class="panel-body">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <div class="text-danger">
                        @Html.ValidationSummary()
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="demo-is-inputsmall">Advertisement Name</label>
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.AdvertisementName, new { @class = "form-control input-sm", placeholder = "" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="demo-is-inputsmall">Company Name</label>
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control input-sm", placeholder = "" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="demo-is-inputsmall">Description</label>
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control input-sm", placeholder = "" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="demo-is-inputsmall">Weblink</label>
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.Weblink, new { @class = "form-control input-sm", placeholder = "" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="demo-is-inputsmall">Start Date</label>
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.StartDateTime, new { @class = "form-control input-sm", placeholder = "" })


                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="demo-is-inputsmall">End Date</label>
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.EndDateTime, new { @class = "form-control input-sm", placeholder = "" })

                    </div>
                </div>


            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <button class="btn btn-success btn-labeled fa fa-save fa-lg" type="submit">Save</button>


                        <a href="@Url.Action("ListAllAdvertise", "Advertise")">
                            <button class="btn btn-danger  btn-labeled fa fa-repeat fa-lg" type="button">Back To List</button></a>

                    </div>
                </div>
            </div>
        }
        <!--===================================================-->
        <!--End Input Size-->

    </div>
</div>

