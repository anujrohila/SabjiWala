@model ClientSite.Models.TblUserLoginMaster
@{
    ViewBag.Title = "userRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("userRegistration", "CustomerAccount", FormMethod.Post, new { @class = "form-horizontal" }))
{

    <div class="container main-container headerOffset">

        <div class="row">
            <div class="breadcrumbDiv col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="index.html">Home</a> </li>
                    <li class="active">Customer Registration 1 </li>
                </ul>
            </div>
        </div>

        <div class="row">

            <div class="col-lg-9 col-md-9 col-sm-7">
                <h1 class="section-title-inner"><span><i class="fa fa-lock"></i>Registration 1</span></h1>

                <div class="row userInfo">

                    <div class="col-xs-12 col-sm-6">
                        <h2 class="block-title-2">Create an account </h2>
                        <form role="form" class="regForm">
                            <div class="form-group">
                                <label>User Name(Mobile no)</label>

                                @Html.TextBoxFor(Model => Model.UserName, new { @class = "form-control", @placeholder = "customer MobileNo" })
                            </div>

                            <div class="form-group">
                                <label>Password</label>

                                @Html.PasswordFor(Model => Model.Password, new { @class = "form-control", @placeholder = "Password" })
                            </div>


                            @*  <div class="form-group">
                            <label>User Type</label>
                            @Html.DropDownListFor(Model => Model.TypeID, new SelectList(ViewBag.type, "TypeID", "TypeName"), "---Select User Type  ---", new { @class = "form-control" })
                         
                        </div>*@

                            <div class="error">
                            </div>
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary btn-small"><i class="fa fa-arrow-circle-right"></i>&nbsp Create an account</button>
                            </div>
                            @*  <div class="pull-right"> 
              <a href="checkout-3.html" class="btn btn-primary btn-small " > Shipping method &nbsp; <i class="fa fa-arrow-circle-right"></i> </a> 			              </div>
            </div>*@
                        </form>
                    </div>
                </div>
                <!--/row end-->

            </div>

            <div class="col-lg-3 col-md-3 col-sm-5"></div>
        </div>
        <!--/row-->

        <div style="clear: both"></div>
    </div>
    <!-- /wrapper -->

}


