@model ClientSite.Models.TblUserLoginMaster

@{
    ViewBag.Title = "CustLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
 <meta http-equiv="Cache-Control" content="no-cache" /> 
        <meta http-equiv="Pragma" content="no-cache"/>
         <meta http-equiv="Expires" content="0"/>

 <script type="text/javascript">

        function disableBackButtonAllBrowsers() {

            window.history.forward();

        };


        window.onload = disableBackButtonAllBrowsers();

        window.onpageshow = function (evts) {

            if (evts.persisted) {

                disableBackButtonAllBrowsers();

            }

        };



        window.onunload = function () {

            void (0)

        };

 </script>


@using (Html.BeginForm("CustLogin", "CustomerAccount", FormMethod.Post, new { @class = "form-horizontal" }))
{

   
        <div class="container main-container headerOffset">

            <div class="row">
                <div class="breadcrumbDiv col-lg-12">
                    <ul class="breadcrumb">
                        <li><a href="index.html">Home</a> </li>
                        <li class="active">Authentication </li>
                    </ul>
                </div>
            </div>

            <div class="row">

                <div class="col-lg-9 col-md-9 col-sm-7">
                    <h1 class="section-title-inner"><span><i class="fa fa-lock"></i>Authentication</span></h1>

                    <div class="row userInfo">


                        <div class="col-xs-12 col-sm-6">
                            <h2 class="block-title-2"><span>Already registered?</span></h2>
                            <form role="form" class="logForm">
                                <div class="form-group">
                                    <label>UserName(Mobile No.)</label>
                                    @Html.TextBoxFor(a => a.UserName, new { @class = "form-control", @placeholder = "User name", @maxlength = "10", @minlength = "3", autocomplete = "off" })
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    @Html.PasswordFor(a => a.Password, new { @class = "form-control", @placeholder = "password", @maxlength = "10", @minlength = "3", autocomplete = "off" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="checkbox">
                                        Remember me
                                    </label>
                                </div>
                                <div class="form-group">
                                    <p><a title="Recover your forgotten password" href="@Url.Action("forgotpassword", "CustomerAccount")">Forgot your password? </a></p>
                                </div>
                            
                                <button class="btn btn-success  fa fa-sign-in  btn-labeled text-uppercase" type="submit">  Sign In</button>
                                <div style="color: red;">
                                    @if (TempData["error"] != null)
                                    {
                                        @TempData["error"].ToString();
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                    <!--/row end-->

                </div>

                <div class="col-lg-3 col-md-3 col-sm-5"></div>
            </div>
            <!--/row-->


        </div>
   
}
