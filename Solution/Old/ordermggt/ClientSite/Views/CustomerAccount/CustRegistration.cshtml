@model ClientSite.Models.TblCustomerMaster
@{
    ViewBag.Title = "CustRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}


@using (Html.BeginForm("CustRegistration", "CustomerAccount", FormMethod.Post, new { @class = "form-horizontal" }))
{
  
    <div class="container main-container headerOffset">

        <div class="row" id="Registration">
            <div class="breadcrumbDiv col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="index.html">Home</a> </li>
                    <li class="active">Customer Registration </li>
                </ul>
            </div>
        </div>

        <div class="row">

            <div class="col-lg-9 col-md-9 col-sm-7">
                <h1 class="section-title-inner"><span><i class="fa fa-lock"></i>Registration 2</span></h1>

                <div class="row userInfo">

                    <div class="col-xs-12 col-sm-6">
                        <h2 class="block-title-2">Create an account </h2>
                        <div class="form-group">
                            <label>Customer (Mobile No.)</label>
                            @Session["UserName"].ToString()
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            @Session["Password"].ToString()
                        </div>

                        @*<div class="form-group">
                            <label>Customer (Mobile No.)</label>

                            @Html.TextBoxFor(Model => Model.CustomerName, new { @class = "form-control", @placeholder = "Customer as a CustomerName" })
                        </div>

                        <div class="form-group">
                            <label>Password</label>

                            @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", @placeholder = "Customer as a Password" })
                        </div>*@

                        <div class="form-group">
                            <label>Display Name</label>

                            @Html.TextBoxFor(Model => Model.DisplayName, new { @class = "form-control", @placeholder = "Customer Display Name", @maxlength = "15", @minlength = "2", autocomplete = "off" })
                        </div>

                        <div class="form-group">
                            <label>First Name</label>

                            @Html.TextBoxFor(Model => Model.FirstName, new { @class = "form-control", @placeholder = "First Name", @maxlength = "10", @minlength = "3", autocomplete = "off" })
                        </div>

                        <div class="form-group">
                            <label>Middel Name</label>

                            @Html.TextBoxFor(Model => Model.MiddleName, new { @class = "form-control", @placeholder = "Midddle Name", @maxlength = "10", @minlength = "3", autocomplete = "off" })
                        </div>

                        <div class="form-group">
                            <label>Last Name</label>

                            @Html.TextBoxFor(Model => Model.LastName, new { @class = "form-control", @placeholder = "Last Name", @maxlength = "10", @minlength = "3", autocomplete = "off" })
                        </div>


                        <div class="form-group">
                            <label>Email address</label>

                            @Html.TextBoxFor(Model => Model.EmailId, new { @class = "form-control", @placeholder = "Email ID", @maxlength = "20", @minlength = "6", autocomplete = "off" })
                        </div>

                        <div class="form-group">
                            <label>Language</label>
                            @Html.DropDownListFor(Model => Model.LanguageID, new SelectList(ViewBag.Lang, "LanguageID", "Language"), "---Select Language ---", new { @class = "form-control" })

                        </div>

                        <div class="error">
                        </div>

                        <button type="submit" class="btn   btn-primary btn-labeled"><i class="fa fa-user"></i>Create an account</button>
                       @* <a href="@Url.Action("CustLogin", "CustomerAccount")">Log in </a>*@

                        @Html.ActionLink("Login ", "CustLogin", "CustomerAccount", null, new { @class = "btn btn-success btn-labeled fa fa-sign-in " })
                        @* </form>*@
                    </div>


                </div>
                <!--/row end-->

            </div>

            <div class="col-lg-3 col-md-3 col-sm-5"></div>
        </div>
        <!--/row-->

        <div style="clear: both"></div>
    </div>
    <!-- /wrapper -->  
}


<div class="row">
    <div class="pad-ver">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            @if (ViewBag.actionmsg == "1")
            {
                <label class="control-label  btn btn-success btn-labeled  fa fa-thumbs-o-up">Congratulation...  Your Registration is successfull...</label>
            }
            @if (ViewBag.actionmsg == "0")
            { 
                <label class="control-label btn btn-danger btn-labeled fa fa-thumbs-o-down">@ViewBag.email   Name is already Exist  .............</label>
            }
        </div>
    </div>
</div>
