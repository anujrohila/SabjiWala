@model  adminsite.Models.TblAdminLoginMaster

@{
    ViewBag.Title = "Profile1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Profile1", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
{
    // @Html.ValidationSummary(true)
    
   
   
    <div id="page-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Admin Profile</h3>
                    </div>



                    <div class="panel-body">


                         <div class="form-group">
                            <label class="col-sm-3 control-label"></label>
                            <div class="col-md-6 col-sm-6">
                                <img src="http://localhost:2870/Images/Admin/@Html.DisplayFor(Model => Model.AdminProfile)" height="100" width="100"/>
                            </div>
                        </div>




                        <div class="form-group">
                            <label class="col-sm-3 control-label">Admin Name</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.DisplayName, new { @class = "form-control", @ViewBag.Disabled })

                            </div>
                        </div>





                        <div class="form-group">
                            <label class="col-sm-3 control-label">EmailID</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.EmailID, new { @class = "form-control", @ViewBag.Disabled })
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-3 control-label">Mobile No</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.MobileNo, new { @class = "form-control", @ViewBag.Disabled })

                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-3 control-label">Address</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.Address, new { @class = "form-control", @ViewBag.Disabled })

                            </div>
                        </div>

                       






                       
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                    @Html.ActionLink("Edit", "ProfileEdit", "Login", null,new { @class = " btn btn-success btn-labeled fa fa-pencil-square-o" })
                                </div>
                            </div>
                       


                    </div>
                </div>
            </div>
        </div>


    </div>
          
   
}


