@model adminsite.Models.TblCategoryMaster
@{
    ViewBag.Title = "CategoryDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("CategoryDelete", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
{
  
    <div id="page-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Category information</h3>
                    </div>

                    <div class="panel-body">


                        <div class="form-group">
                            <label class="col-sm-3 control-label">Category Name</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.CategoryName, new { @class = "form-control", @ViewBag.Disabled })
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-3 control-label">Category Iamge</label>
                            <div class="col-md-6 col-sm-6">
                                <img src="http://localhost:2870/Images/Category/@Html.DisplayFor(Model => Model.CategoryImage)" height="70" width="70"/>
                            </div>
                        </div>








                        
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                    <button class="btn btn-danger btn-labeled fa fa-trash-o" type="submit">Delete</button>
                                    @Html.ActionLink("Back to List", "CategoryIndex", "Category", null,new { @class = "btn btn-warning btn-labeled fa fa-undo" })
                                </div>
                            </div>
                       



                    </div>
                </div>
            </div>
        </div>
    </div>
}
