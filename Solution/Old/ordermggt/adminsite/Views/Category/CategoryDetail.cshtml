@model adminsite.Models.TblCategoryMaster
@{
    ViewBag.Title = "CategoryDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">

    #img {
        transition:ease-in-out 0.5s;
    }

    #img:hover {

        height:500px;
        width:500px;
        transition:ease-in-out 0.6s;
    }

</style>

<form class="form-horizontal">
   
    <div id="page-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Category information</h3>
                    </div>

                    <div class="panel-body">

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Category Name</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.CategoryName, new { @class = "form-control", @ViewBag.Disabled })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Category Image</label>
                            <div class="col-md-6 col-sm-6">
                                <img src="http://localhost:2870/Images/Category/@Html.DisplayFor(Model => Model.CategoryImage)" id="img" height="70" width="70"/>
                            </div>
                        </div>



                        
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                    @Html.ActionLink("Back to List", "CategoryIndex", "Category",null, new { @class = "btn btn-warning btn-labeled fa fa-undo" })
                                </div>
                            </div>
                       


                    </div>


                </div>

            </div>

        </div>
    </div>
</form>





