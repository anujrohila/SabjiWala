@model PagedList.IPagedList<adminsite.Models.TblSupplierMaster>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Supplier</h3>
    </div>

    <!--Data Table-->
    <!--===================================================-->
    <div class="panel-body">
        <div class="pad-btm form-inline">
            <div class="row">
                <div class="col-sm-6 table-toolbar-left">

                    @Html.ActionLink("Add New Supplier", "UserReg", "UserLogin", null ,new { @class = "btn btn-purple btn-labeled fa fa-plus" })
                </div>
                <div class="col-sm-6 table-toolbar-right">
                    <div class="form-group">

                        @*<input id="demo-input-search2" type="text" placeholder="Search" class="form-control" autocomplete="off">*@


                        @using (Html.BeginForm("Index", "Supplier", FormMethod.Get))
                        {
                            
                          
                            <div class="input-group date">
                                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control ", @placeholder = "Search", autocomplete = "off" })
                                <span class="input-group-addon" style="background-color: purple; color: white;"><i class="fa fa-search fa-lg"></i></span>
                            </div>
                          
                                 
                        }



                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>@Html.ActionLink("SupplierName", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })</th>
                            <th>EmailId</th>
                            <th>Organization Name</th>

                            <th colspan="3" style="text-align: center;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                 <td>@Html.DisplayFor(model => item.SupplierName)</td>
                                <td>@Html.DisplayFor(model => item.FirstName)     @Html.DisplayFor(model => item.MiddleName)    @Html.DisplayFor(model => item.LastName)</td>
                                <td>@Html.DisplayFor(model => item.EmailID)</td>
                                <td>@Html.DisplayFor(model => item.OrganizationName)</td>

                                <td class="pad-all text-center">
                                    @Html.ActionLink("View", "Detail", new { id = item.SupplierID }, new { @class = " btn btn-mint btn-labeled fa fa-book" })
                                    @Html.ActionLink("Edit", "Edit", new { id = item.SupplierID }, new { @class = " btn btn-success btn-labeled fa fa-pencil-square-o" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.SupplierID }, new { @class = " btn btn-danger btn-labeled fa fa-trash-o" })
                                </td>

                            </tr>
                             
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!--===================================================-->
        <!--End Data Table-->

    </div></div>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))








