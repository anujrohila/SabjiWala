@model adminsite.Models.TblSupplierMaster
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("Edit", "Supplier", FormMethod.Post, new { @class = "form-horizontal" }))
{
   
    <div id="page-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Supplier </h3>
                    </div>

                    <div class="panel-body">

                        @* @if (!Html.ValidationSummary().ToString().Contains("display:none"))
                        {
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6 alert alert-danger">
                                    @Html.ValidationSummary()
                                </div>
                            </div>
                        }*@

                        @Html.HiddenFor(Model => Model.SupplierID, new { @class = "form-control" })



                        <div class="form-group">
                            <label class="col-sm-3 control-label">Supplier Name(Mobile No.)</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.SupplierName, new { @class = "form-control", @maxlength = "10", @minlength = "10", autocomplete = "off" })
                                @Html.ValidationMessageFor(Model => Model.SupplierName)
                            </div>
                        </div>


                        <div class="form-group">
                        @*    <label class="col-sm-3 control-label">Password</label>*@
                            <div class="col-md-6 col-sm-6">
                                @Html.HiddenFor(Model => Model.Password, new { @class = "form-control", @maxlength = "10", @minlength = "3", autocomplete = "off" })
                            </div>
                        </div>


                        @* <div class="row">
                             <div class="col-sm-12">
                            <div class="form-group">
                            <label class="control-label">Confirm Password:</label>
                            <i>@Html.PasswordFor(Model => Model.SupplierName, new { @class = "form-control" })</i>
                              </div>
                            </div>
                        </div>*@




                        <div class="form-group">
                            <label class="col-sm-3 control-label">First Name</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.FirstName, new { @class = "form-control", @maxlength = "10", @minlength = "3", autocomplete = "off" })
                                @Html.ValidationMessageFor(Model => Model.FirstName)
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-3 control-label">Middle Name</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.MiddleName, new { @class = "form-control", @maxlength = "10", @minlength = "3", autocomplete = "off" })
                                @Html.ValidationMessageFor(Model => Model.MiddleName)
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-3 control-label">Last Name</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.LastName, new { @class = "form-control", @maxlength = "10", @minlength = "3", autocomplete = "off" })
                                @Html.ValidationMessageFor(Model => Model.LastName)
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-3 control-label">EmailId</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.EmailID, new { @class = "form-control", @maxlength = "20", autocomplete = "off" })
                                @Html.ValidationMessageFor(Model => Model.EmailID)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Organization Name</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(Model => Model.OrganizationName, new { @class = "form-control", @maxlength = "15", @minlength = "3", autocomplete = "off" })
                                @Html.ValidationMessageFor(Model => Model.OrganizationName)
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="col-sm-3 control-label">Language</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.DropDownListFor(Model => Model.LanguageID, new SelectList(ViewBag.Lang, "LanguageID", "Language"), "---Select Language ---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(Model => Model.LanguageID)
                            </div>
                        </div>




                        <div class="form-group">
                            <label class="col-sm-3 control-label">Address</label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextAreaFor(Model => Model.Address, new { @class = "form-control", @maxlength = "50", @minlength = "6", autocomplete = "off" })
                                @Html.ValidationMessageFor(Model => Model.Address)
                            </div>
                        </div>





                        <div class="row">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-6">
                                <button class="btn btn-info btn-labeled fa fa-pencil-square-o" type="submit">Save</button>
                                @Html.ActionLink("Back to List", "Index", "supplier", null, new { @class = "btn btn-warning btn-labeled fa fa-undo" })

                            </div>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>  
   
}

<div class="row">
    <div class="pad-ver">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            @if (ViewBag.actionmsg == "1")
            {
                <label class="control-label  btn btn-success btn-labeled  fa fa-thumbs-o-up">Well done! Your data is Successfully Inserted</label>
            }
            @if (ViewBag.actionmsg == "0")
            { 
                <label class="control-label btn btn-danger btn-labeled fa fa-thumbs-o-down">Sorry....  Data is already Exist.  .............</label>
            }
        </div>
    </div>
</div>

