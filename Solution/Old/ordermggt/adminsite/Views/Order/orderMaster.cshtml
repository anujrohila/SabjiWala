@model IEnumerable<adminsite.Models.DTO.ordermasterdto>
@{
    ViewBag.Title = "orderMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Orders</h3>
        </div>

        <!--Data Table-->
        <!--===================================================-->
        <div class="panel-body">
            <div class="pad-btm form-inline">
                <!--Add new Category--->


                @*@Html.ActionLink("Add New Product", "createProduct", "Product", new { @class = "btn btn-purple btn-labeled fa fa-plus" })*@


            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>OrderId</th>   
                            <th>Customer</th>
                            <th>Address</th>
                            <th>Order status</th>
                            <th>Order Date-Time</th>
                             <th>Employee</th>
                            <th colspan="3" style="text-align:center;">Action</th>
                          

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => item.orderid)</td>
                                <td>@Html.DisplayFor(model => item.customer)</td>
                                <td>@Html.DisplayFor(model => item.address)</td>
                                <td>@Html.DisplayFor(model => item.orderstatus)</td>
                                <td>@Html.DisplayFor(model => item.orderdatetime)</td>
                                 <td>@Html.DisplayFor(model => item.employee)</td>
                              

                                <td class="pad-all text-center">
                                @Html.ActionLink("Detail", "OrderItemDetail", new { id = item.orderid }, new { @class = " btn btn-mint btn-labeled fa fa-book"})
                                @Html.ActionLink("Delete", "orderMasterdelete", new { id = item.orderid }, new { @class = " btn btn-danger btn-labeled fa fa-trash-o", onclick = "return confirm('Are you sure you want to delete this order?');" })
                                </td>
                            </tr>
                             
                        }


                    </tbody>
                </table>
                 

            </div>
        </div>



    </div>
</div>
