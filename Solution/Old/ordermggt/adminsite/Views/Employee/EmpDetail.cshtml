@model adminsite.Models.DTO.employeedto
@{
    ViewBag.Title = "EmpDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form class="form-horizontal">

<div id="page-content">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Employee information</h3>
                </div>

                <div class="panel-body">
                   
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Employee Name(Mobile No.)</label>
                        <div class="col-md-6 col-sm-6">
                            @Html.TextBoxFor(Model => Model.empname, new { @class = "form-control", @ViewBag.Disabled })
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-sm-3 control-label">First Name</label>
                        <div class="col-md-6 col-sm-6">
                            @Html.TextBoxFor(Model => Model.fname, new { @class = "form-control", @ViewBag.Disabled })
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-3 control-label">Middel Name</label>
                        <div class="col-md-6 col-sm-6">
                            @Html.TextBoxFor(Model => Model.mname, new { @class = "form-control", @ViewBag.Disabled })
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-3 control-label">Last Name</label>
                        <div class="col-md-6 col-sm-6">
                            @Html.TextBoxFor(Model => Model.lname, new { @class = "form-control", @ViewBag.Disabled })
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-3 control-label">EmailId</label>
                        <div class="col-md-6 col-sm-6">
                            @Html.TextBoxFor(Model => Model.emailid, new { @class = "form-control", @ViewBag.Disabled })
                        </div>
                    </div>




                    <div class="form-group">
                        <label class="col-sm-3 control-label">Address:</label>
                        <div class="col-md-6 col-sm-6">
                            @Html.TextBoxFor(Model => Model.address, new { @class = "form-control", @ViewBag.Disabled })
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-3 control-label">Employee Type:</label>
                        <div class="col-md-6 col-sm-6">
                            @Html.TextBoxFor(Model => Model.emptype, new { @class = "form-control", @ViewBag.Disabled })
                        </div>
                    </div>



                    
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                @Html.ActionLink("Back to List", "EmpIndex", "Employee",null, new { @class = "btn btn-warning btn-labeled fa fa-undo" })
                            </div>
                        </div>

                    


                </div>


            </div>

        </div>

    </div>
</div>

</form>



